<h2>質問相手を選ぶ</h2>

<strong>検索する:</strong><br>
<%= form_tag(url_for(:action => 'find'), :remote => true, :id => "valid_form") do %>
  <%= text_field_tag :to %>
  <%= submit_tag "確認" %>
<% end %>
<div id="valid"></div>

<br>
<br>

<strong>最近送った相手:</strong><br>
<% count = 0 %>
<% @questions.each do |question| %>
  <%= link_to question.to, new_question_path(to: question.to) %>
  <% count += 1 %>
  <% if count == 10 %>
    <% break %>
  <% end %>
  <br>
<% end %>

