<h3>送信リスト</h3>

<table class="table">
  <thead>
    <tr>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @questions.each do |question| %>
      <tr>
        <td><%= question.to[0, 15] %></td>
        <% if question.answerd != true %>
          <td id="yet">未</td>
        <% elsif question.answer == false %>
          <td id="no">N</td>
        <% else %>
          <td id="yes">Y</td>
        <% end %>
        <td><%= link_to '', question, method: :delete, data: { confirm: 'Are you sure?' }, class: "glyphicon glyphicon-remove" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
