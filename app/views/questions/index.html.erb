<h2>受信リスト</h2>

<table>
  <thead>
    <tr>
      <th>From</th>
      <th>state</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @questions.each do |question| %>
      <tr>
        <td><%= question.from[0, 11] %></td>
        <% if question.answerd != true %>
          <td id="yet">未</td>
        <% elsif question.answer == false %>
          <td id="no">N</td>
        <% else %>
          <td id="yes">Y</td>
        <% end %>
        <td><%= link_to 'Answer', answer_question_path(question) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
