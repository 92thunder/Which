<h1>Listing receive questions</h1>

<table>
  <thead>
    <tr>
      <th>To</th>
      <th>From</th>
      <th>Question</th>
      <th>Answer</th>
      <th>Answerd?</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @questions.each do |question| %>
      <tr>
        <td><%= question.to %></td>
        <td><%= question.from %></td>
        <td><%= question.question %></td>
        <td><%= question.answer %></td>
        <td><%= question.answerd? %></td>
        <td><%= link_to 'Answer', answer_question_path(question) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
